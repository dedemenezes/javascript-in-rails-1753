<%# SHOULD NEVER HAVE INSTANCE VARIABLES INSIDE PARTIALS! %>
<%= simple_form_for(monument, html: { data: { action: 'submit->insert-in-list#send', insert_in_list_target: 'form' } }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :opening_date, as: :string, input_html: { class: 'new_class', data: { controller: 'flatpickr' } } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
